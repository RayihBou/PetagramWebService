<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/cornerradius"
    >


    <LinearLayout
        android:id="@+id/lineCP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/android"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone"
                android:background="@color/colorBlanco"
                android:layout_marginLeft="10dp"
                />

             <TextView
                 android:id="@+id/tvNombreCV"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/NombreMascotas"
                 android:textSize="@dimen/medidanombre"
                 android:layout_gravity="center"
                 android:layout_marginLeft="65dp"

            />

            <TextView
                android:id="@+id/tvLikesCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NumeroLikes"
                android:layout_gravity="center"
                android:textSize="@dimen/medidanombre"
                android:layout_marginLeft="30dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_liked"
                android:layout_marginLeft="0dp"

                />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>